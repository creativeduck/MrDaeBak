        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MrDaeBak"
        tools:targetApi="31">
        <activity
            android:name="com.creativeduck.mrdaebak.activity.SettingActivity"
            android:exported="false"/>
        <activity
            android:name="com.creativeduck.mrdaebak.activity.LoginActivity"
            android:exported="true">
        </activity>
        <activity
            android:name="com.creativeduck.mrdaebak.activity.DinnerActivity"
            android:exported="false" />
        <activity
            android:name="com.creativeduck.mrdaebak.activity.StyleActivity"
            android:exported="false" />
        <activity
            android:name="com.creativeduck.mrdaebak.activity.OrderActivity"
            android:exported="false" />
        <activity
            android:name="com.creativeduck.mrdaebak.activity.SignInActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.creativeduck.mrdaebak.activity.SttDinnerActivity"
            android:exported="false" />
        <activity
            android:name="com.creativeduck.mrdaebak.activity.SttStyleActivity"
            android:exported="false" />
        <activity
            android:name="com.creativeduck.mrdaebak.activity.OrderListActivity"
            android:exported="false" />
        <activity
            android:name="com.creativeduck.mrdaebak.activity.OrderDetailActivity"
            android:exported="false" />
        <activity android:name="com.creativeduck.mrdaebak.activity.OrderReceiptActivity"
            android:exported="false"/>
        <activity android:name=".activity.IngredientActivity"
            android:exported="false"/>
    </application>

</manifest>