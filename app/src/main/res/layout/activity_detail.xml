<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/ll_detail_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/tv_detail_dinner"
            android:layout_width="130dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            tools:text="발렌타인 디너"
            android:textAlignment="center"
            android:textSize="15sp"
            android:padding="20dp"
            android:background="@drawable/shape_tv_dinner"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_detail_style"
            android:layout_width="130dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            tools:text="심플 디너"
            android:textSize="15sp"
            android:textAlignment="center"
            android:padding="20dp"
            android:background="@drawable/shape_tv_dinner"
            />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_detail_to_order"
        android:layout_below="@id/ll_detail_container"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="9dp"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_detail_to_order"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:text="주문하기"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_kakao_btn"
        android:backgroundTint="@color/black"/>

</RelativeLayout>