<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_style_simple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="심플 디너"
        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_style_grand"
        android:padding="30dp"
        android:background="@drawable/shape_tv_dinner"
        />

    <TextView
        android:id="@+id/tv_style_grand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="그랜드 디너"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_style_simple"
        app:layout_constraintBottom_toTopOf="@+id/tv_style_deluxe"
        android:padding="30dp"
        android:background="@drawable/shape_tv_dinner"
        />

    <TextView
        android:id="@+id/tv_style_deluxe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="디럭스 디너"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_style_grand"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="30dp"
        android:background="@drawable/shape_tv_dinner"
        />

</androidx.constraintlayout.widget.ConstraintLayout>